<UserControl x:Class="MailBox.BrowserPanel.Attachment"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MailBox.BrowserPanel"
             mc:Ignorable="d" 
             >
    <Grid>
        <Border BorderThickness="1" BorderBrush="SteelBlue" Margin="0,0,10,0">
            <TextBlock  x:Name="attachmentLabel" VerticalAlignment="Center" HorizontalAlignment="Center" Padding="5,4,5,4" Background="{DynamicResource {x:Static SystemColors.InactiveCaptionBrushKey}}"/>
        </Border>
    </Grid>
</UserControl>
